{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FinanceFlow",
  "version": "0.1.0",
  "identifier": "com.financeflow.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FinanceFlow",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://denoprj.deno.dev; style-src 'self' 'unsafe-inline' https://denoprj.deno.dev; img-src 'self' https://denoprj.deno.dev data: https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://denoprj.deno.dev"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
